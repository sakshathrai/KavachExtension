{
  "manifest_version": 3,
  "name": "Kavach",
  "version": "1.0.0",
  "description": "Kavach Extension",
  "icons": {
    "16": "logo_16.png",
    "30": "logo_30.png",
    "48": "logo_48.png",
    "128": "logo_128.png"
  },
  "background": {
    "service_worker": "./static/js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["./static/js/content.js"]
    }
  ],
  "action": {
    "default_popup": "index.html"
  },
  "options_page": "options.html",
  "permissions": ["storage", "tabs", "activeTab", "webNavigation"]
}
